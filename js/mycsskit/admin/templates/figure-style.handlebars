figure{
	background: #{{colorOne}};
	width: auto;
	display: inline-block;
	border: solid 20px #{{borderColor}};
	padding: 5px;
	-moz-box-shadow: 0 0 0px 2px #{{colorOne}}, inset 0 0 2px 0px #{{colorTwo}};
	-webkit-box-shadow: 0 0 0px 2px #{{colorOne}}, inset 0 0 2px 0px #{{colorTwo}};
	box-shadow: 0 0 0px 2px #{{colorOne}}, inset 0 0 2px 0px #{{colorTwo}};
}

figcaption{
	padding: 10px;
	background: #{{borderColor}};
	width: auto;
	-moz-box-shadow: 0 0 2px 0px #{{colorTwo}};
	-webkit-box-shadow: 0 0 2px 0px #{{colorTwo}};
	box-shadow: 0 0 2px 0px #{{colorTwo}};
}