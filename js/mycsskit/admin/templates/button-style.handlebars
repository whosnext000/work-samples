/* Copy the following code into your css file */
.{{className}}{
	/* Other and Older browsers */
	background:url(images/btn-grey.png) repeat-x 0 0;
	/* Chrome,Safari4+ */
	background: -webkit-gradient(linear, left top, left bottom, color-stop(1%,#{{colorOne}}), color-stop(100%,#{{colorTwo}}));
	/* Chrome 10+,Safari */
	background : -webkit-linear-gradient(top, #{{colorOne}} 00%, #{{colorTwo}} 99%);
	/* Firefox 4+ */ 
	background : -moz-linear-gradient(top, #{{colorOne}} 00%, #{{colorTwo}} 99%);
	/* Opera */
	background : -o-linear-gradient(top, #{{colorOne}} 00%, #{{colorTwo}} 99%);
	/* IE 10+ */
	background : -ms-linear-gradient(top, #{{colorOne}} 00%, #{{colorTwo}} 99%); 
	/* W3C */
	background : -linear-gradient(top, #{{colorOne}} 00%, #{{colorTwo}} 99%);
	/* IE 6-8 */
	filter: progid:DXImageTransform.Microsoft.gradient( startColorstr='#{{colorOne}}', endColorstr='#{{colorTwo}}',GradientType=0 );
	padding: 5px 20px;
	border: 1px solid #{{borderColor}};
	color: #{{fontColor}};
	text-shadow: -1px 0 #{{textShadowColor}}, 0 -1px #{{textShadowColor}}, 0 1px #{{textShadowColor}}, -1px -1px #{{textShadowColor}};
	/* Firefox 4+ */
	-moz-border-radius: {{borderRadiusTopLeft}}px {{borderRadiusTopRight}}px {{borderRadiusBottomRight}}px {{borderRadiusBottomLeft}}px;
	/* Chrome 10+,Safari */
	-webkit-border-radius: {{borderRadiusTopLeft}}px {{borderRadiusTopRight}}px {{borderRadiusBottomRight}}px {{borderRadiusBottomLeft}}px;
	/* W3C*/
	border-radius: {{borderRadiusTopLeft}}px {{borderRadiusTopRight}}px {{borderRadiusBottomRight}}px {{borderRadiusBottomLeft}}px;
	/* Firefox 4+ */
	-moz-box-shadow: 0px 5px 0px -1px #{{shadowColor}}, 0 7px 1px -1px #464646, 0 7px 6px 0px #a7a7a7;
	/* Chrome 10+,Safari */
	-webkit-box-shadow: 0px 5px 0px -1px #{{shadowColor}}, 0 7px 1px -1px #464646, 0 7px 6px 0px #a7a7a7;
	/* W3C */
	box-shadow: 0px 5px 0px -1px #{{shadowColor}}, 0 7px 1px -1px #464646, 0 7px 6px 0px #a7a7a7;
}


.{{className}}:active{
	/* Firefox 4+ */
	-moz-box-shadow: 0px 4px 0px -1px #{{shadowColor}}, 0 5px 1px -1px #464646, 0 5px 4px 0px #a7a7a7;
	/* Chrome 10+,Safari */
	-webkit-box-shadow: 0px 4px 0px -1px #{{shadowColor}}, 0 5px 1px -1px #464646, 0 5px 4px 0px #a7a7a7;
	/* W3C */
	box-shadow: 0px 4px 0px -1px #{{shadowColor}}, 0 5px 1px -1px #464646, 0 5px 4px 0px #a7a7a7;
	position:relative;
	top: 3px;
	/* Chrome 10+,Safari */
	-webkit-transition: all {{transitionTime}}ms ease-in-out;
	/* Firefox 4+ */
	-moz-transition: all {{transitionTime}}ms ease-in-out;
	/* IE 9,10 */
	-ms-transition: all {{transitionTime}}ms ease-in-out;
	/* Opera */
	-o-transition: all {{transitionTime}}ms ease-in-out;
	/* W3C */
	transition: all {{transitionTime}}ms ease-in-out;
}